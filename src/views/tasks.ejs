<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Tarefas</h1>
      <p class="text-center lead">Crie ou edite suas tarefas abaixo</p>

      <%- include('includes/messages')  %>

      <% if(task._id) { %>
        <form action="/task/edit/<%= task._id %>" method="POST">
      <% } else { %>
        <form action="/task/register" method="POST">
      <% } %>

        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
      
        <div class="form-group">
          <label>Nome da tarefa:</label>
          <input value="<%= task.name %>" type="text" class="form-control" placeholder="Insira o nome da sua tarefa" name="name">
        </div>
      
        <div class="form-group">
          <label>Nome da disciplina:</label>
          <input value="<%= task.discipline %>" type="text" class="form-control" placeholder="Insira o nome da disciplina" name="discipline">
        </div>
      
        <div class="form-group">
          <label>Email do professor:</label>
          <input value="<%= task.emailTeacher %>" type="email" class="form-control" placeholder="Insira o Email do seu professor para contato" name="emailTeacher">
        </div>
      
        <div class="form-group">
          <label>Descrição:</label>
          <input value="<%= task.description %>" type="tel" class="form-control" placeholder="Insira a descrição da tarefa" name="description">
        </div>

        <div class="form-group">
          <label>Data de entrega:</label>
          <input value="<%= task.dateLimit %>" type="tel" class="form-control" placeholder="Insira a data de entrega da tarefa" name="dateLimit">
        </div>
      
        <button type="submit" class="btn btn-primary">Salvar Tarefa</button>
      </form>      
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
